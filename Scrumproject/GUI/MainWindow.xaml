                    <TextBox Height="23" Canvas.Left="187" TextWrapping="Wrap" Text="" Canvas.Top="60" Width="102" Background="Black"/>
                    <ComboBox Canvas.Left="207" Canvas.Top="351" Width="120"/>
                    <ListView Height="126" Canvas.Left="35" Canvas.Top="321" Width="140" Background="Black">

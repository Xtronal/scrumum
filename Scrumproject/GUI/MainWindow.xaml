                    <Label x:Name="lbEndDate" Content="Slutdatum" Canvas.Left="294" Canvas.Top="11" Width="65" RenderTransformOrigin="0.366,0.311"/>
                    <Label x:Name="lbFreeDay" Content="Antal lediga dagar" Canvas.Left="26" Canvas.Top="54" Width="109"/>
                    <ListView/>
                    <Button x:Name="btnCreateDraft" Content="Skapa Utkast
                            " Canvas.Left="471" Canvas.Top="505" Width="75" RenderTransformOrigin="0.071,-0.846"/>
                    <Label x:Name="lbCarTripLength" Content="Bilresor" Canvas.Left="38" Canvas.Top="120" RenderTransformOrigin="0.362,-0.746"/>
                    <Label x:Name="lbDagar" Content="Dagar" Canvas.Left="45" Canvas.Top="176" RenderTransformOrigin="0.362,-0.746"/>
                    <Label x:Name="lbLand" Content="Land" Canvas.Left="165" Canvas.Top="176" RenderTransformOrigin="0.362,-0.746"/>
                    <TextBox x:Name="lbCarTripLengthKm" Height="23" Canvas.Left="165" TextWrapping="Wrap" Text="Km" Canvas.Top="120" Width="102"/>
                    <Label x:Name="lbWhatHaveIDoneToday" Content="Noteringar" Canvas.Left="601" Canvas.Top="9" RenderTransformOrigin="0.659,0.185"/>
                    <TextBox x:Name="tbNotes" Height="113" Canvas.Left="594" TextWrapping="Wrap" Text="" Canvas.Top="54" Width="121"/>
                    <TextBox Height="23" Canvas.Left="165" TextWrapping="Wrap" Text="" Canvas.Top="58" Width="102"/>
                    <ComboBox Canvas.Left="165" Canvas.Top="207" Width="120"/>
                    <ListView Height="100" Canvas.Left="45" Canvas.Top="207" Width="100">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Spara Kvitto
                            " Canvas.Left="49" Canvas.Top="505" Width="75" RenderTransformOrigin="0.77,2.2"/>
                    <Button x:Name="btnUploadReceipt" Content="Bläddra" Canvas.Left="192" Canvas.Top="403" Width="75"/>
                    <TextBox x:Name="tbReceiptFile" Height="23" Canvas.Left="49" TextWrapping="Wrap" Text="" Canvas.Top="400" Width="120" RenderTransformOrigin="0.67,0.409"/>
                    <TextBox x:Name="tbSum" Height="23" Canvas.Left="45" TextWrapping="Wrap" Text="" Canvas.Top="462" Width="120" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="6.809"/>
                                <RotateTransform/>
                                <TranslateTransform X="1.373"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                    <ListView Height="100" Canvas.Left="294" Canvas.Top="400" Width="120">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btnRemoveSelectedReceipt" Content="Ta bort kvitto
                            " Canvas.Left="326" Canvas.Top="505" Width="75" RenderTransformOrigin="1.09,0.237"/>
                    <Label x:Name="lbReceipts" Content="Kvitton för resa" Canvas.Left="310" Canvas.Top="369"/>
                    <Label Content="Belopp för kvitto" Canvas.Left="49" Canvas.Top="428" Width="116"/>
                    <Label Content="Ladda upp kvitto
                           " Canvas.Left="49" Canvas.Top="365" RenderTransformOrigin="0.537,0.874"/>
                    <Button x:Name="btnSaveDraft" Content="Spara utkast" Canvas.Left="594" Canvas.Top="505" Width="75" RenderTransformOrigin="0.618,-0.243"/>
                    <Button x:Name="btnSendReport" Content="Skicka Rapport
                            " Canvas.Left="716" Canvas.Top="505" Width="84"/>
                    <Label Content="Maxbelopp för land
                           " Canvas.Left="169" Canvas.Top="250" Width="116"/>
                    <Button x:Name="btnSaveStartCountry" Content="Spara land" Canvas.Left="165" Canvas.Top="325" Width="75"/>
                    <Label x:Name="lbMaxSumSpecificCountry" Content="" Canvas.Left="169" Canvas.Top="281" RenderTransformOrigin="1.556,2.432" Width="93"/>


                </Canvas>
            </TabItem>
            <TabItem Header="Förskottsansökan" />
            <TabItem Header="Administratörs" />
            <ListView Height="100" Width="100">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabControl>
    </Grid>




</Window>

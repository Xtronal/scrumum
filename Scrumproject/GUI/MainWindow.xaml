                    <Label Content="Belopp för kvitto" Canvas.Left="31" Canvas.Top="601" Width="144" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <Label Content="Ladda upp kvitto
                           " Canvas.Left="31" Canvas.Top="522" RenderTransformOrigin="0.537,0.874" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontSize="16"/>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="528*"/>
            <ColumnDefinition Width="294*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="4" Margin="-10,10,10,-10">
            <TabItem Header="Rapportering">
                <Canvas Margin="0,1,0,-1">
                    <DatePicker x:Name="dpStartDate" Canvas.Left="165" Canvas.Top="11"></DatePicker>
                    <DatePicker x:Name="dpEndDate" Canvas.Left="378" Canvas.Top="13"></DatePicker>
                    <Label x:Name="lbStartDate" Content="Startdatum

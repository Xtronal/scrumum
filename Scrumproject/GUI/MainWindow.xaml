                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="1.625"/>
                                <RotateTransform Angle="0.389"/>
                                <TranslateTransform X="2.42" Y="0.017"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                    <ListView Height="100" Canvas.Left="220" Canvas.Top="553" Width="120" Background="Black">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btnRemoveSelectedReceipt" Content="Ta bort kvitto
